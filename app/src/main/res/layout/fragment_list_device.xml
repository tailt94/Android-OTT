<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    tools:context="com.terralogic.alexle.ott.controller.fragments.ListDeviceFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_add" />

    <LinearLayout
        android:id="@+id/btn_add"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        style="@style/AddDeviceButtonStyle">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_device_fragment_add"
            android:textColor="@color/login_button_text_color"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>
