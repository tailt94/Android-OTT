<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.terralogic.alexle.ott.controller.activities.RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp">
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:text="@string/register_email"/>
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_alignParentStart="true"
                android:inputType="textEmailAddress"
                android:hint="@string/register_input_email"/>

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_email"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:layout_alignParentStart="true"
                android:text="@string/register_password"/>
            <EditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:layout_alignParentStart="true"
                android:inputType="textPassword"
                android:hint="@string/register_input_password"/>

            <TextView
                android:id="@+id/confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_password"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_confirm_password"/>
            <EditText
                android:id="@+id/input_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_password"
                android:layout_alignParentStart="true"
                android:inputType="textPassword"
                android:hint="@string/register_input_confirm_password"/>

            <TextView
                android:id="@+id/first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_confirm_password"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_first_name"/>
            <EditText
                android:id="@+id/input_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_name"
                android:layout_alignParentStart="true"
                android:inputType="text"
                android:hint="@string/register_input_first_name"/>

            <TextView
                android:id="@+id/last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_first_name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_last_name"/>
            <EditText
                android:id="@+id/input_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/last_name"
                android:layout_alignParentStart="true"
                android:inputType="text"
                android:hint="@string/register_input_last_name"/>

            <TextView
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_last_name"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_sex"/>
            <RadioGroup
                android:id="@+id/group_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sex"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/sex_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_male"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/sex_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/register_female"/>
                <RadioButton
                    android:id="@+id/sex_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/register_other"/>
            </RadioGroup>

            <TextView
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/group_sex"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_birthday"/>
            <TextView
                android:id="@+id/input_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birthday"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_input_birthday"/>

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_birthday"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_city"/>
            <EditText
                android:id="@+id/input_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:layout_alignParentStart="true"
                android:inputType="text"
                android:hint="@string/register_input_city"/>

            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/input_city"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/register_vertical_dimen"
                android:text="@string/register_country"/>
            <EditText
                android:id="@+id/input_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/country"
                android:layout_alignParentStart="true"
                android:inputType="text"
                android:hint="@string/register_input_country"/>

            <LinearLayout
                android:id="@+id/btn_register"
                android:layout_below="@+id/input_country"
                android:layout_marginTop="11dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                style="@style/LoginScreenButtonStyle">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_button_register"
                    android:textColor="@color/login_button_text_color"
                    android:textSize="15sp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
